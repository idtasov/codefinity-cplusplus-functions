#include <iostream>

double calculateAverage(int* scores, int n) {
    double sum = 0.0;
    for (int i = 0; i < n; i++) {
        sum += scores[i];
    }
    return sum / n;
}

int main() {
    int n = 5;
    int* scores = new int[n]{80, 90, 75, 85, 100};

    double average = calculateAverage(scores, n);
    std::cout << "Average score: " << average << std::endl;
    
    delete[] scores;
    return 0;
}